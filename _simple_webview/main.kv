<MyButton@MDFlatButton>:
    on_kv_post: self.size_hint_x = 1
    md_bg_color: 'blue'
    theme_text_color: 'Custom'
    text_color: 'white'

<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(10)
        MDLabel:
            text: '[b]CUSTOM WEBVIEW[/b]\n\nUsing Modal View\nAnd Some Small Modification'
            halign: 'center'
            markup: True

        MyButton:
            text: 'Site: Google'
            on_press: root.button_pressed('https://www.google.com/')
        MyButton:
            text: 'Site: Wiki/Pencil'
            on_press: root.button_pressed('https://en.wikipedia.org/wiki/Pencil')
        MyButton:
            text: 'Site: Kivy'
            on_press: root.button_pressed('https://kivy.org/')
        MyButton:
            text: 'EXIT APP'
            on_press: app.stop()